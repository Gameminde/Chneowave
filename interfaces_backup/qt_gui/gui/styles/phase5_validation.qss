/* =============================================================================
   PHASE 5 - VALIDATION DES FINITIONS ET COHÉRENCE
   Fichier de test pour valider l'harmonisation complète
   ============================================================================= */

/* Test de cohérence des espacements Golden Ratio */
.test-container {
    padding: 34px; /* Golden Ratio - Grand espacement */
    margin: 21px; /* Golden Ratio - Espacement moyen */
    border-radius: 8px;
    background-color: white;
}

.test-button {
    padding: 13px 21px; /* Golden Ratio - Espacements harmonieux */
    margin: 8px; /* Golden Ratio - Micro-espacement */
    border-radius: 8px;
    font-size: 14px; /* Taille de police unifiée */;
}

.test-input {
    padding: 13px 21px; /* Golden Ratio - Espacements harmonieux */
    margin: 8px 0; /* Golden Ratio - Micro-espacement vertical */
    border-radius: 8px;
    font-size: 14px; /* Taille de police unifiée */
    line-height: 1.618; /* Golden Ratio - Hauteur de ligne */
}

.test-card {
    padding: 21px; /* Golden Ratio - Espacement moyen */
    margin: 13px; /* Golden Ratio - Espacement petit */
    border-radius: 8px;
}

/* Test de hiérarchie typographique */
.test-h1 {
    font-size: 24px; /* H1 - Titre principal */
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 21px; /* Golden Ratio - Espacement moyen */
}

.test-h2 {
    font-size: 20px; /* H2 - Sous-titre */
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 13px; /* Golden Ratio - Espacement petit */
}

.test-h3 {
    font-size: 16px; /* H3 - Section */
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 8px; /* Golden Ratio - Micro-espacement */
}

.test-body {
    font-size: 14px; /* Texte principal */
    font-weight: 400;
    line-height: 1.618; /* Golden Ratio */
    margin-bottom: 13px; /* Golden Ratio - Espacement petit */
}

.test-caption {
    font-size: 12px; /* Légende */
    font-weight: 400;
    line-height: 1.5;
    color: #64748b;
}

/* Test des ombres modernes - Note: box-shadow non supporté par Qt */
.test-shadow-subtle {
    border: 1px solid rgba(0, 0, 0, 0.08); /* Ombre subtile */
}

.test-shadow-medium {
    border: 1px solid rgba(0, 0, 0, 0.12); /* Ombre moyenne */
}

.test-shadow-strong {
    border: 1px solid rgba(0, 0, 0, 0.16); /* Ombre forte */
}

.test-shadow-colored {
    border: 1px solid rgba(59, 130, 246, 0.2); /* Ombre colorée */
}

/* Test des bordures arrondies modernes */
.test-radius-small {
    border-radius: 4px; /* Petit rayon */
}

.test-radius-medium {
    border-radius: 8px; /* Rayon moyen */
}

.test-radius-large {
    border-radius: 12px; /* Grand rayon */
}

/* Test de cohérence des couleurs */
.test-primary {
    background-color: #3b82f6;
    color: white;
}

.test-secondary {
    background-color: #64748b;
    color: white;
}

.test-success {
    background-color: #10b981;
    color: white;
}

.test-warning {
    background-color: #f59e0b;
    color: white;
}

.test-error {
    background-color: #ef4444;
    color: white;
}

/* Test des états interactifs */
.test-interactive:hover {
    background-color: #e0f2fe;
    /* transition not supported in Qt */
}

.test-interactive:active {
    background-color: #b3e5fc;
}

/* Test de responsivité */
@media (max-width: 768px) {
    .test-container {
        padding: 21px; /* Réduction pour mobile */
        margin: 13px;
    }
    
    .test-h1 {
        font-size: 20px; /* Réduction pour mobile */
    }
    
    .test-h2 {
        font-size: 18px;
    }
}

/* Validation finale - Tous les éléments doivent respecter ces règles */
.phase5-validated {
    /* Espacements basés sur Golden Ratio : 8, 13, 21, 34, 55px */
    /* Typographie hiérarchisée : 12, 14, 16, 20, 24px */
    /* Ombres subtiles et modernes */
    /* Bordures arrondies cohérentes */
    /* Couleurs harmonieuses */
    /* Transitions fluides */
}