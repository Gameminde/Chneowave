QDockWidget::title {
    background-color: #d3edf9; /* Frost White */
    color: #37474F; /* Storm Gray */
    padding: 12px 16px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom: 1px solid #E1F5FE; /* Seafoam */
    font-weight: bold;
}

/* =============================================================================
   SPLITTERS
   ============================================================================= */

QSplitter::handle {
    background-color: #E1F5FE; /* Seafoam */
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #0478b9; /* Steel Blue */
}

/* =============================================================================
   TOOLTIPS
   ============================================================================= */

QToolTip {
    background-color: #0A1929; /* Deep Navy */
    color: white;
    border: none;
    border-radius: 8px; /* Rayon moderne */
    padding: 8px 13px; /* Golden Ratio - Espacement petit */
    font-size: 12px;
}

/* =============================================================================
   CLASSES UTILITAIRES
   ============================================================================= */

.card {
    background-color: white;
    border: 1px solid #E1F5FE; /* Seafoam */
    border-radius: 12px;
    padding: 24px;
}

.card-shadow {
    background-color: white;
    border: 1px solid #E1F5FE; /* Seafoam */
    border-radius: 12px;
    padding: 24px;
}

.text-primary {
    color: #00558c; /* Harbor Blue */
}

.text-secondary {
    color: #37474F; /* Storm Gray */
}

.text-success {
    color: #00ACC1; /* Tidal Green */
}

.text-warning {
    color: #f59e0b;
}

.text-error {
    color: #FF6B47; /* Coral Alert */
}

.bg-primary {
    background-color: #00558c; /* Harbor Blue */
}

.bg-secondary {
    background-color: #d3edf9; /* Frost White */
}

.bg-success {
    background-color: #00ACC1; /* Tidal Green */
}

.bg-warning {
    background-color: #f59e0b;
}

.bg-error {
    background-color: #FF6B47; /* Coral Alert */
}