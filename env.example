# CHNeoWave - Configuration d'environnement pour l'intégration Bridge API
# Copiez ce fichier vers .env.local et adaptez les valeurs

# URLs du Bridge API Python
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Type de backend (local = Bridge API, mock = simulation)
VITE_BACKEND_TYPE=local

# Configuration de développement
VITE_DEBUG=true
VITE_LOG_LEVEL=info

# Configuration de l'interface
VITE_DEFAULT_THEME=solarized
VITE_ENABLE_ANIMATIONS=true

# Configuration de l'acquisition
VITE_DEFAULT_SAMPLING_RATE=1000
VITE_DEFAULT_BUFFER_SIZE=10000
VITE_DEFAULT_VOLTAGE_RANGE=±10V

# Délais et timeouts (ms)
VITE_API_TIMEOUT=30000
VITE_WS_RECONNECT_DELAY=1000
VITE_WS_MAX_RETRIES=5
