/* Thème Clair CHNeoWave v1.1.0
 * Utilise les variables centralisées de variables.qss
 * Proportions basées sur Fibonacci et le nombre d'or
 */

/* === IMPORTATION DES VARIABLES === */
@import "variables.qss";

/* === CONFIGURATION GLOBALE === */
* {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-md);
    line-height: var(--line-height-normal);
}

/* === FENÊTRE PRINCIPALE === */
QMainWindow {
    background-color: var(--background);
    color: var(--on-background);
    border: none;
}

QWidget {
    background-color: transparent;
    color: var(--on-surface);
    font-family: var(--font-family-primary);
    font-size: var(--font-size-md);
}

/* === SIDEBAR NAVIGATION === */
QWidget[class="sidebar"] {
    background-color: var(--surface);
    border-right: 1px solid var(--outline-variant);
    min-width: var(--sidebar-width-collapsed);
    max-width: var(--sidebar-width-expanded);
}

QWidget[class="sidebar-header"] {
    background-color: var(--primary);
    color: var(--on-primary);
    padding: var(--spacing-md);
    min-height: var(--header-height);
}

QWidget[class="sidebar-content"] {
    padding: var(--spacing-sm);
}

/* === BOUTONS === */
QPushButton {
    background-color: var(--surface-variant);
    border: 1px solid var(--outline-variant);
    border-radius: var(--radius-md);
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--on-surface);
    font-weight: 500;
    min-height: var(--button-height-md);
    transition: all var(--duration-fast) var(--easing-standard);
}

QPushButton:hover {
    background-color: var(--primary-light);
    border-color: var(--primary);
    color: var(--on-primary);
    box-shadow: var(--elevation-2);
}

QPushButton:pressed {
    background-color: var(--primary-dark);
    border-color: var(--primary-dark);
    color: var(--on-primary);
    box-shadow: var(--elevation-1);
}

QPushButton:disabled {
    background-color: var(--surface-variant);
    color: var(--outline);
    border-color: var(--outline-variant);
    box-shadow: none;
}

/* Boutons primaires */
QPushButton[class="primary"] {
    background-color: var(--primary);
    border-color: var(--primary);
    color: var(--on-primary);
    box-shadow: var(--elevation-2);
}

QPushButton[class="primary"]:hover {
    background-color: var(--primary-light);
    box-shadow: var(--elevation-3);
}

QPushButton[class="primary"]:pressed {
    background-color: var(--primary-dark);
    box-shadow: var(--elevation-1);
}

/* Boutons secondaires */
QPushButton[class="secondary"] {
    background-color: var(--secondary);
    border-color: var(--secondary);
    color: var(--on-secondary);
}

QPushButton[class="secondary"]:hover {
    background-color: var(--secondary-light);
}

/* Boutons de navigation sidebar */
QPushButton[class="nav-button"] {
    background-color: transparent;
    border: none;
    border-radius: var(--radius-lg);
    padding: var(--spacing-md);
    text-align: left;
    min-height: var(--button-height-lg);
    margin: var(--spacing-xs) 0;
}

QPushButton[class="nav-button"]:hover {
    background-color: var(--primary-light);
    color: var(--on-primary);
}

QPushButton[class="nav-button"]:checked {
    background-color: var(--primary);
    color: var(--on-primary);
    font-weight: 600;
}

/* === LABELS === */
QLabel {
    color: var(--on-surface);
    background-color: transparent;
    padding: var(--spacing-xs) 0;
}

QLabel[class="title"] {
    font-size: var(--font-size-title);
    font-weight: 600;
    color: var(--primary);
    margin-bottom: var(--spacing-md);
}

QLabel[class="heading"] {
    font-size: var(--font-size-heading);
    font-weight: 700;
    color: var(--on-surface);
    margin-bottom: var(--spacing-lg);
}

QLabel[class="subtitle"] {
    font-size: var(--font-size-lg);
    font-weight: 500;
    color: var(--outline);
    margin-bottom: var(--spacing-sm);
}

/* === CHAMPS DE SAISIE === */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: var(--surface);
    border: 1px solid var(--outline-variant);
    border-radius: var(--radius-md);
    padding: var(--input-padding-y) var(--input-padding-x);
    color: var(--on-surface);
    selection-background-color: var(--primary-light);
    selection-color: var(--on-primary);
    min-height: var(--input-height);
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: var(--primary);
    border-width: 2px;
    box-shadow: 0 0 0 3px rgba(25, 118, 210, 0.1);
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: var(--surface-variant);
    color: var(--outline);
    border-color: var(--outline-variant);
}

/* === COMBOBOX === */
QComboBox {
    background-color: var(--surface);
    border: 1px solid var(--outline-variant);
    border-radius: var(--radius-md);
    padding: var(--input-padding-y) var(--input-padding-x);
    color: var(--on-surface);
    min-width: 120px;
    min-height: var(--input-height);
}

QComboBox:hover {
    border-color: var(--primary);
}

QComboBox:focus {
    border-color: var(--primary);
    border-width: 2px;
}

QComboBox::drop-down {
    border: none;
    width: var(--spacing-lg);
    padding-right: var(--spacing-sm);
}

